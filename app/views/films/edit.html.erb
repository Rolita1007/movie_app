<h2>Edit Film</h2>

<%= form_for @film do |f| %>
  <%= f.label :Year %>
  <%= f.text_field :year %>

  <%= f.label :genre %>
  <%= f.text_field :genre%>

  <%= f.label :Synopsis %>
  <%= f.text_field :synopsis %>

  <%= f.submit %>
<% end %>

<%= form_for @film, method: :delete do |f| %>
  <%= f.submit "Delete!", class: "delete" %>
<% end %>
